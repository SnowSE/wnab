<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WNAB.Maui"
             x:Class="WNAB.Maui.MainPage"
             x:DataType="local:MainPageViewModel">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Sign Out"
                     Priority="0"
                     Order="Primary"
                     Command="{Binding SignOutCommand}" />
    </ContentPage.ToolbarItems>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="{Binding UserDisplay}"
                TextColor="Gray"
                HorizontalOptions="End"
                AutomationId="SignedInIndicator" />
            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a hovercraft number nine" />

           
            <Label
                Text="Welcome to &#10;WNAB"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Welcome to WNAB - We Need A Budget" />

            <Label
                Text="Manage your finances with ease. Use the navigation menu to access different sections."
                Style="{StaticResource BodyLarge}"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center" />

            <!-- Navigation buttons to main sections -->
            <Button
                Text="View Categories"
                Command="{Binding NavigateToCategoriesCommand}"
                HorizontalOptions="Fill" />

            <Button
                Text="View Accounts"
                Command="{Binding NavigateToAccountsCommand}"
                HorizontalOptions="Fill" />

            <Button
                Text="Add New Transaction"
                Command="{Binding OpenNewTransactionCommand}"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

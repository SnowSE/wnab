<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="WNAB.Maui.AddCategoryPopup"
               Color="MidnightBlue">
    <VerticalStackLayout Padding="20" Spacing="16" WidthRequest="260" BackgroundColor="#2D2D30">
        <Label Text="Add Category" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White" />
        <Button Text="Close" Command="{Binding CloseCommand}" />
    </VerticalStackLayout>
</toolkit:Popup>
<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:local="clr-namespace:WNAB.MVM;assembly=WNAB.MVM"
               x:Class="WNAB.Maui.AddCategoryPopup"
               x:DataType="local:AddCategoryViewModel"
               Color="MidnightBlue">
    
    <!-- LLM-Dev:v4 Updated styling to match improved popup design with better contrast and removed User ID field -->
    <VerticalStackLayout Padding="20" Spacing="16" WidthRequest="320" BackgroundColor="White">
        <Label Text="Add Category" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="Black" 
               FontSize="18" />
               
        <!-- LLM-Dev:v4 Simplified to just category name - removed User ID field -->
        <StackLayout Spacing="8">
            <Label Text="Name" TextColor="Black" FontSize="16" />
            <Entry Text="{Binding Name}" 
                   Placeholder="Category name"
                   BackgroundColor="LightGray"
                   TextColor="Black"
                   PlaceholderColor="Gray" />
        </StackLayout>

        <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
            <Button Text="Cancel" 
                    Command="{Binding CloseCommand}"
                    BackgroundColor="LightGray"
                    TextColor="Black" />
            <Button Text="Create" 
                    Command="{Binding CreateCommand}"
                    BackgroundColor="DodgerBlue"
                    TextColor="White" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
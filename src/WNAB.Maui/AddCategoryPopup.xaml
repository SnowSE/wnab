<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:local="clr-namespace:WNAB.MVM;assembly=WNAB.MVM"
               x:Class="WNAB.Maui.AddCategoryPopup"
               x:DataType="local:AddCategoryViewModel"
               >
    
    <!-- LLM-Dev:v4 Updated styling to match improved popup design with better contrast and removed User ID field -->
    <VerticalStackLayout Padding="20" Spacing="16" WidthRequest="320" BackgroundColor="White">
        <Label Text="Add Category" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="Black" 
               FontSize="18" />
               
        <!-- Category Name -->
        <StackLayout Spacing="8">
            <Label Text="Name" TextColor="Black" FontSize="16" />
            <Entry Text="{Binding Model.Name}" 
                   Placeholder="Category name"
                   BackgroundColor="LightGray"
                   TextColor="Black"
                   PlaceholderColor="Gray" />
        </StackLayout>

        <!-- Color Picker -->
        <StackLayout Spacing="8">
            <Label Text="Color" TextColor="Black" FontSize="16" />
            <HorizontalStackLayout Spacing="8">
                <Border StrokeThickness="3" 
                        Stroke="{Binding Model.SelectedColor, Converter={StaticResource ColorMatchToBorderConverter}, ConverterParameter=#ef4444}"
                        BackgroundColor="#ef4444"
                        WidthRequest="40" HeightRequest="40"
                        StrokeShape="RoundRectangle 20">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectColorCommand}" CommandParameter="#ef4444" />
                    </Border.GestureRecognizers>
                </Border>
                <Border StrokeThickness="3" 
                        Stroke="{Binding Model.SelectedColor, Converter={StaticResource ColorMatchToBorderConverter}, ConverterParameter=#f59e0b}"
                        BackgroundColor="#f59e0b"
                        WidthRequest="40" HeightRequest="40"
                        StrokeShape="RoundRectangle 20">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectColorCommand}" CommandParameter="#f59e0b" />
                    </Border.GestureRecognizers>
                </Border>
                <Border StrokeThickness="3" 
                        Stroke="{Binding Model.SelectedColor, Converter={StaticResource ColorMatchToBorderConverter}, ConverterParameter=#10b981}"
                        BackgroundColor="#10b981"
                        WidthRequest="40" HeightRequest="40"
                        StrokeShape="RoundRectangle 20">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectColorCommand}" CommandParameter="#10b981" />
                    </Border.GestureRecognizers>
                </Border>
                <Border StrokeThickness="3" 
                        Stroke="{Binding Model.SelectedColor, Converter={StaticResource ColorMatchToBorderConverter}, ConverterParameter=#3b82f6}"
                        BackgroundColor="#3b82f6"
                        WidthRequest="40" HeightRequest="40"
                        StrokeShape="RoundRectangle 20">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectColorCommand}" CommandParameter="#3b82f6" />
                    </Border.GestureRecognizers>
                </Border>
            </HorizontalStackLayout>
            <HorizontalStackLayout Spacing="8">
                <Border StrokeThickness="3" 
                        Stroke="{Binding Model.SelectedColor, Converter={StaticResource ColorMatchToBorderConverter}, ConverterParameter=#6366f1}"
                        BackgroundColor="#6366f1"
                        WidthRequest="40" HeightRequest="40"
                        StrokeShape="RoundRectangle 20">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectColorCommand}" CommandParameter="#6366f1" />
                    </Border.GestureRecognizers>
                </Border>
                <Border StrokeThickness="3" 
                        Stroke="{Binding Model.SelectedColor, Converter={StaticResource ColorMatchToBorderConverter}, ConverterParameter=#7c3aed}"
                        BackgroundColor="#7c3aed"
                        WidthRequest="40" HeightRequest="40"
                        StrokeShape="RoundRectangle 20">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectColorCommand}" CommandParameter="#7c3aed" />
                    </Border.GestureRecognizers>
                </Border>
                <Border StrokeThickness="3" 
                        Stroke="{Binding Model.SelectedColor, Converter={StaticResource ColorMatchToBorderConverter}, ConverterParameter=#ec4899}"
                        BackgroundColor="#ec4899"
                        WidthRequest="40" HeightRequest="40"
                        StrokeShape="RoundRectangle 20">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectColorCommand}" CommandParameter="#ec4899" />
                    </Border.GestureRecognizers>
                </Border>
                <Border StrokeThickness="3" 
                        Stroke="{Binding Model.SelectedColor, Converter={StaticResource ColorMatchToBorderConverter}, ConverterParameter=#14b8a6}"
                        BackgroundColor="#14b8a6"
                        WidthRequest="40" HeightRequest="40"
                        StrokeShape="RoundRectangle 20">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SelectColorCommand}" CommandParameter="#14b8a6" />
                    </Border.GestureRecognizers>
                </Border>
            </HorizontalStackLayout>
        </StackLayout>

        <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
            <Button Text="Cancel" 
                    Command="{Binding CloseCommand}"
                    BackgroundColor="LightGray"
                    TextColor="Black" />
            <Button Text="Create" 
                    Command="{Binding CreateCommand}"
                    BackgroundColor="DodgerBlue"
                    TextColor="White" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
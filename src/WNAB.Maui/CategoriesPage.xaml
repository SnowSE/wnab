<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:WNAB.Maui.Behaviors"
             xmlns:local="clr-namespace:WNAB.Maui"
             x:Class="WNAB.Maui.CategoriesPage"
             x:DataType="local:CategoriesViewModel"
             Title="Categories">
    <ContentPage.Behaviors>
        <!-- LLM-Dev:v3 Use the shared OnAppearingOnceBehavior and correct LoadCommand name -->
        <behaviors:OnAppearingOnceBehavior Command="{Binding LoadCommand}" />
    </ContentPage.Behaviors>
    <Grid Padding="16" RowDefinitions="Auto,*" RowSpacing="12">
        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" />
        <CollectionView Grid.Row="1" ItemsSource="{Binding Categories}">
            <CollectionView.EmptyView>
                <Label Text="No categories yet." HorizontalOptions="Center" VerticalOptions="Center" />
            </CollectionView.EmptyView>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:CategoryItem">
                    <HorizontalStackLayout Padding="8,6">
                        <Label Text="{Binding Name}" FontSize="16" />
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>

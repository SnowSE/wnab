<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:local="clr-namespace:WNAB.MVM;assembly=WNAB.MVM"
               x:Class="WNAB.Maui.LoginPage"
               x:DataType="local:LoginViewModel">

    <!-- BackgroundColor="#3b3434"   -->

    <VerticalStackLayout 
        BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
        Padding="24" Spacing="16" WidthRequest="320">
        <Label Text="Login" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label Text="Enter your User ID" />
        <Entry Placeholder="User ID" Text="{Binding Model.UserId}" />
        
        <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
            <Button Text="Cancel"
                    Command="{Binding CancelCommand}" />
            <Button Text="Save"
                    Command="{Binding SaveUserIdCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>

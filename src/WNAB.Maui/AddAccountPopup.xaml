<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:local="clr-namespace:WNAB.Maui"
               x:Class="WNAB.Maui.AddAccountPopup"
               x:DataType="local:AddAccountViewModel"
               Color="MidnightBlue">
    <VerticalStackLayout Padding="20" Spacing="16" WidthRequest="320" BackgroundColor="#2D2D30">
        <Label Text="Add Account" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White" />
        
        <!-- LLM-Dev:v2 Added status message display to show login status -->
        <Label Text="{Binding StatusMessage}" HorizontalOptions="Center" TextColor="LightBlue" FontSize="Small" />
        
        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*" ColumnSpacing="8" RowSpacing="8">
            <Label Text="User Id" Grid.Row="0" Grid.Column="0" TextColor="White" />
            <!-- LLM-Dev:v2 Made User ID field read-only since it's automatically loaded from login -->
            <Entry Text="{Binding UserId}" Grid.Row="0" Grid.Column="1" Keyboard="Numeric" IsReadOnly="True" />

            <Label Text="Name" Grid.Row="1" Grid.Column="0" TextColor="White" />
            <Entry Text="{Binding Name}" Grid.Row="1" Grid.Column="1" Placeholder="Account name" />
        </Grid>
        <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
            <Button Text="Cancel" Command="{Binding CloseCommand}" />
            <!-- LLM-Dev:v2 Only enable Create button when logged in -->
            <Button Text="Create" Command="{Binding CreateCommand}" IsEnabled="{Binding IsLoggedIn}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
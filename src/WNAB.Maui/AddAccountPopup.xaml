<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="WNAB.Maui.AddAccountPopup"
               Color="MidnightBlue">
    <VerticalStackLayout Padding="20" Spacing="16" WidthRequest="320" BackgroundColor="#2D2D30">
        <Label Text="Add Account" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White" />
        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*" ColumnSpacing="8" RowSpacing="8">
            <Label Text="User Id" Grid.Row="0" Grid.Column="0" TextColor="White" />
            <Entry Text="{Binding UserId}" Grid.Row="0" Grid.Column="1" Keyboard="Numeric" />

            <Label Text="Name" Grid.Row="1" Grid.Column="0" TextColor="White" />
            <Entry Text="{Binding Name}" Grid.Row="1" Grid.Column="1" Placeholder="Account name" />
        </Grid>
        <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
            <Button Text="Cancel" Command="{Binding CloseCommand}" />
            <Button Text="Create" Command="{Binding CreateCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
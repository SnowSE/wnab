<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:local="clr-namespace:WNAB.MVM;assembly=WNAB.MVM"
               x:Class="WNAB.Maui.AddAccountPopup"
               x:DataType="local:AddAccountViewModel">
               
    <!-- LLM-Dev:v3 Improved styling with better contrast and removed User ID field -->
    <VerticalStackLayout Padding="20" Spacing="16" WidthRequest="320" BackgroundColor="White">
        <Label Text="Add Account" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="Black" 
               FontSize="18" />
        
        <!-- LLM-Dev:v3 Added status message with better styling -->
        <Label Text="{Binding Model.StatusMessage}" 
               HorizontalOptions="Center" 
               TextColor="DarkSlateGray" 
               FontSize="14" />
        
        <!-- LLM-Dev:v3 Simplified to just account name - removed User ID field -->
        <StackLayout Spacing="8">
            <Label Text="Account Name" TextColor="Black" FontSize="16" />
            <Entry Text="{Binding Model.Name}" 
                   Placeholder="Enter account name" 
                   BackgroundColor="LightGray"
                   TextColor="Black"
                   PlaceholderColor="Gray" />
        </StackLayout>
        
        <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
            <Button Text="Cancel" 
                    Command="{Binding CloseCommand}"
                    BackgroundColor="LightGray"
                    TextColor="Black" />
            <Button Text="Create" 
                    Command="{Binding CreateCommand}"
                    BackgroundColor="DodgerBlue"
                    TextColor="White" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
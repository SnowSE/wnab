<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="WNAB.Maui.NewTransactionPopup"
               Color="MidnightBlue"
               >
    <VerticalStackLayout BackgroundColor="Purple" Padding="20" Spacing="16" WidthRequest="320" >
        <Label  Text="New Transaction" FontAttributes="Bold" HorizontalOptions="Center" />
        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto" ColumnSpacing="8" RowSpacing="10">
            <Label  Text="Amount:" />
            <Entry Grid.Column="1" Keyboard="Numeric" Text="{Binding Amount}" Placeholder="0.00" />

            <Label Grid.Row="1" Text="Memo:" />
            <Entry Grid.Row="1" Grid.Column="1" Text="{Binding Memo}" Placeholder="Description" />
        </Grid>
        <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
            <Button Text="Cancel" Command="{Binding CancelCommand}" />
            <Button Text="Save" Command="{Binding SaveCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>

<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               xmlns:local="clr-namespace:WNAB.MVM;assembly=WNAB.MVM"
               x:Class="WNAB.Maui.AddUserPopup"
               x:DataType="local:AddUserViewModel"
               >
    <!-- LLM-Dev:v3 Updated styling to match improved AddAccountPopup with better contrast -->
    <VerticalStackLayout Padding="20" Spacing="16" WidthRequest="320" BackgroundColor="White">
        <Label Text="Add User" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               TextColor="Black" 
               FontSize="18" />
               
        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto" ColumnDefinitions="*,*" ColumnSpacing="8" RowSpacing="8">
            <Label Text="First Name" Grid.Row="0" Grid.ColumnSpan="2" TextColor="Black" FontSize="16" />
            <Entry Text="{Binding FirstName}" 
                   Grid.Row="1" Grid.ColumnSpan="2" 
                   Placeholder="First name"
                   BackgroundColor="LightGray"
                   TextColor="Black"
                   PlaceholderColor="Gray" />

            <Label Text="Last Name" Grid.Row="2" Grid.ColumnSpan="2" TextColor="Black" FontSize="16" />
            <Entry Text="{Binding LastName}" 
                   Grid.Row="3" Grid.ColumnSpan="2" 
                   Placeholder="Last name"
                   BackgroundColor="LightGray"
                   TextColor="Black"
                   PlaceholderColor="Gray" />

            <Label Text="Email" Grid.Row="4" Grid.ColumnSpan="2" TextColor="Black" FontSize="16" />
            <Entry Text="{Binding Email}" 
                   Grid.Row="5" Grid.ColumnSpan="2" 
                   Keyboard="Email" 
                   Placeholder="name@example.com"
                   BackgroundColor="LightGray"
                   TextColor="Black"
                   PlaceholderColor="Gray" />
        </Grid>
        <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
            <Button Text="Cancel" 
                    Command="{Binding CloseCommand}"
                    BackgroundColor="LightGray"
                    TextColor="Black" />
            <Button Text="Create" 
                    Command="{Binding CreateCommand}"
                    BackgroundColor="DodgerBlue"
                    TextColor="White" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
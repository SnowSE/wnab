<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="WNAB.Maui.AddUserPopup"
               BackgroundColor="MidnightBlue">
    <VerticalStackLayout Padding="20" Spacing="16" WidthRequest="320" BackgroundColor="#2D2D30">
        <Label Text="Add User" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White" />
        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,*" ColumnSpacing="8" RowSpacing="8">
            <Label Text="Name" Grid.Row="0" Grid.ColumnSpan="2" TextColor="White" />
            <Entry Text="{Binding Name}" Grid.Row="1" Grid.ColumnSpan="2" Placeholder="Full name" />

            <Label Text="Email" Grid.Row="2" Grid.ColumnSpan="2" TextColor="White" />
            <Entry Text="{Binding Email}" Grid.Row="3" Grid.ColumnSpan="2" Keyboard="Email" Placeholder="name@example.com" />
        </Grid>
        <HorizontalStackLayout Spacing="12" HorizontalOptions="End">
            <Button Text="Cancel" Command="{Binding CloseCommand}" />
            <Button Text="Create" Command="{Binding CreateCommand}" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>
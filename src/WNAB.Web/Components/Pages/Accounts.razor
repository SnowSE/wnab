@page "/accounts"
@using WNAB.MVM
@inject AccountsViewModel ViewModel
@inject WNAB.MVM.IAuthenticationService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@implements IDisposable

<div class="accounts-container">
    <!-- Header with title and Add Account button -->
    <div class="accounts-header">
        <div class="header-text">
            <h1 class="page-title">Accounts</h1>
            <p class="page-subtitle">
                @if (ViewModel.Model.ShowInactive)
                {
                    <text>Viewing inactive accounts</text>
                }
                else
                {
                    <text>Manage your financial accounts</text>
                }
            </p>
        </div>
        
        <div class="header-actions">
            <button class="btn btn-secondary" 
                    @onclick="OnToggleShowInactiveClick" 
                    disabled="@(!ViewModel.Model.IsLoggedIn)">
                @if (ViewModel.Model.ShowInactive)
                {
                    <text>Show Active</text>
                }
                else
                {
                    <text>Show Inactive</text>
                }
            </button>
            
            @if (!ViewModel.Model.ShowInactive)
            {
                <button class="btn btn-outline-secondary"
                        @onclick="ToggleAddAccountForm"
                        disabled="@(!ViewModel.Model.IsLoggedIn)">
                    <i class="bi bi-@(ViewModel.IsAddFormVisible ? "x-circle" : "plus-circle") me-1"></i>
                    @(ViewModel.IsAddFormVisible ? "Cancel" : "Add Account")
                </button>
            }
        </div>
    </div>

    @if (ViewModel.IsAddFormVisible)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Create New Account</h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrWhiteSpace(ViewModel.AddAccountModel.StatusMessage))
                {
                    <div class="alert alert-info mb-3">@ViewModel.AddAccountModel.StatusMessage</div>
                }
                <EditForm Model="ViewModel.AddAccountModel" OnValidSubmit="OnCreateAccountSubmit">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Account Name</label>
                            <InputText class="form-control" @bind-Value="ViewModel.AddAccountModel.Name" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Account Type</label>
                            <InputSelect class="form-select" @bind-Value="ViewModel.AddAccountModel.AccountTypeString">
                                @foreach (var type in WNAB.MVM.AddAccountModel.AccountTypeOptions)
                                {
                                    <option value="@type">@type</option>
                                }
                            </InputSelect>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end gap-2 mt-3">
                        <button type="button" class="btn btn-secondary" @onclick="ToggleAddAccountForm">Cancel</button>
                        <button class="btn btn-primary" type="submit" disabled="@ViewModel.AddAccountModel.IsBusy">
                            @if (ViewModel.AddAccountModel.IsBusy)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                            }
                            Create Account
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }

    <!-- Login prompt when not logged in -->
    @if (!ViewModel.Model.IsLoggedIn)
    {
        <div class="text-center my-5">
            <p>Please use the Login page to sign in first.</p>
        </div>
    }

    <!-- Loading indicator -->
    @if (ViewModel.Model.IsBusy)
    {
        <div class="text-center my-4">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    
    <!-- Content when logged in -->
    @if (ViewModel.Model.IsLoggedIn)
    {
        <!-- Total Balance Card -->
        <div class="total-balance-card">
            <p class="balance-label">Total Balance</p>
            <h2 class="balance-amount">@CalculateTotalBalance().ToString("C")</h2>
        </div>

        <!-- Active Accounts -->
        @if (!ViewModel.Model.ShowInactive)
        {
            @if (ViewModel.Model.Items.Count == 0)
            {
                <div class="text-center my-5">
                    <p>No accounts found.</p>
                </div>
            }
            else
            {
                <div class="accounts-grid">
                    @foreach (var account in ViewModel.Model.Items)
                    {
                        <div class="account-card">
                            @if (!account.IsEditing)
                            {
                                <!-- View Mode -->
                                <div class="account-header">
                                    <h3 class="account-name">@account.AccountName</h3>
                                    <div class="account-actions">
                                        <button class="btn btn-link btn-sm text-dark p-1" @onclick="() => OnEditAccountClick(account)" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-link btn-sm text-danger p-1" @onclick="() => OnDeactivateAccountClick(account)" title="Deactivate">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </div>
                                
                                <div class="account-type-section">
                                    <span class="account-type-badge">
                                        <span class="badge-icon">üí≥</span>
                                        <span>@account.AccountTypeDisplay</span>
                                    </span>
                                </div>
                            }
                            else
                            {
                                <!-- Edit Mode -->
                                <div class="account-header">
                                    <input type="text" 
                                           class="form-control" 
                                           @bind="account.EditAccountName" 
                                           placeholder="Account Name" />
                                    <div class="account-actions d-flex">
                                        <button class="btn btn-link btn-sm text-success p-1" @onclick="() => OnSaveAccountClick(account)" title="Save">
                                            <i class="bi bi-check-circle"></i>
                                        </button>
                                        <button class="btn btn-link btn-sm text-danger p-1" @onclick="() => OnCancelEditClick(account)" title="Cancel">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                    </div>
                                </div>
                                
                                <div class="account-type-section">
                                    <select class="form-select" @bind="account.EditAccountTypeString">
                                        <option value="Checking">Checking</option>
                                        <option value="Savings">Savings</option>
                                        <option value="Misc">Misc</option>
                                    </select>
                                </div>
                            }
                            
                            <div class="account-balance">
                                <p class="balance-value">@account.CachedBalance.ToString("C")</p>
                                <p class="balance-currency">USD</p>
                            </div>
                        </div>
                    }
                </div>
            }
        }

        <!-- Inactive Accounts -->
        @if (ViewModel.Model.ShowInactive)
        {
            @if (ViewModel.Model.InactiveItems.Count == 0)
            {
                <div class="empty-state">
                    <div class="empty-icon">üì≠</div>
                    <h3 class="empty-title">No inactive accounts to show</h3>
                    <p class="empty-subtitle">Deactivated accounts will appear here</p>
                </div>
            }
            else
            {
                <div class="accounts-grid">
                    @foreach (var account in ViewModel.Model.InactiveItems)
                    {
                        <div class="account-card inactive-account">
                            <div class="account-header">
                                <h3 class="account-name inactive-name">@account.AccountName</h3>
                                <button class="btn-reactivate" @onclick="() => OnReactivateAccountClick(account)">
                                    <span class="reactivate-icon">‚ôªÔ∏è</span>
                                    <span>Reactivate Account</span>
                                </button>
                            </div>
                            
                            <div class="account-type-section">
                                <span class="account-type-badge inactive-badge">
                                    <span class="badge-icon">üí≥</span>
                                    <span>@account.AccountTypeDisplay</span>
                                </span>
                                <span class="inactive-label">(Inactive)</span>
                            </div>
                            
                            <div class="account-balance">
                                <p class="balance-value">@account.CachedBalance.ToString("C")</p>
                                <p class="balance-currency">USD</p>
                            </div>
                        </div>
                    }
                </div>
            }
        }
    }
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        // Check if user is authenticated and token is valid
        if (AuthService is WNAB.Web.Services.WebAuthenticationService webAuthService)
        {
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            var isTokenExpired = await webAuthService.IsTokenExpiredAsync();

            if (!isAuthenticated || isTokenExpired)
            {
                Navigation.NavigateTo(Navigation.Uri, forceLoad: true);
                return;
            }
        }

        // Subscribe to property changes to trigger UI updates
        ViewModel.PropertyChanged += OnViewModelPropertyChanged;
        ViewModel.Model.PropertyChanged += OnModelPropertyChanged;

        await ViewModel.InitializeAsync();
    }

    private void OnViewModelPropertyChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }

    private void OnModelPropertyChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }

    private decimal CalculateTotalBalance()
    {
        if (ViewModel.Model.ShowInactive)
        {
            return ViewModel.Model.InactiveItems?.Sum(a => a.CachedBalance) ?? 0;
        }
        return ViewModel.Model.Items?.Sum(a => a.CachedBalance) ?? 0;
    }

    private void ToggleAddAccountForm()
    {
        ViewModel.ToggleAddFormCommand.Execute(null);
    }

    private async Task OnCreateAccountSubmit()
    {
        await ViewModel.SaveNewAccountCommand.ExecuteAsync(null);
    }

    private async Task OnToggleShowInactiveClick()
    {
        await ViewModel.ToggleShowInactiveCommand.ExecuteAsync(null);
    }

    private void OnEditAccountClick(AccountItemViewModel account)
    {
        ViewModel.EditAccountCommand.Execute(account);
    }

    private async Task OnSaveAccountClick(AccountItemViewModel account)
    {
        if (string.IsNullOrWhiteSpace(account.EditAccountName))
        {
            await JS.InvokeVoidAsync("alert", "Account name cannot be empty.");
            return;
        }

        var result = await ViewModel.Model.UpdateAccountAsync(account.Id, account.EditAccountName, account.EditAccountType, account.Account.IsActive);
        if (result.Success)
        {
            account.ApplyChanges();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", result.ErrorMessage ?? "Failed to update account. Please try again.");
        }
    }

    private void OnCancelEditClick(AccountItemViewModel account)
    {
        ViewModel.CancelEditAccountCommand.Execute(account);
    }

    private async Task OnDeactivateAccountClick(AccountItemViewModel account)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm",
            $"Are you sure you want to deactivate '{account.AccountName}'?");

        if (!confirmed) return;

        var result = await ViewModel.Model.DeactivateAccountAsync(account.Id);
        if (!result.Success)
        {
            await JS.InvokeVoidAsync("alert", result.ErrorMessage ?? "Failed to deactivate account. Please try again.");
        }
    }

    private async Task OnReactivateAccountClick(AccountItemViewModel account)
    {
        var confirmed = await JS.InvokeAsync<bool>("confirm",
            $"Are you sure you want to reactivate '{account.AccountName}'?");

        if (!confirmed) return;

        var result = await ViewModel.Model.ReactivateAccountAsync(account.Id);
        if (result.Success)
        {
            await ViewModel.Model.LoadAccountsAsync();
        }
        else
        {
            await JS.InvokeVoidAsync("alert", result.ErrorMessage ?? "Failed to reactivate account. Please try again.");
        }
    }

    public void Dispose()
    {
        if (ViewModel != null)
        {
            ViewModel.PropertyChanged -= OnViewModelPropertyChanged;
        }
        if (ViewModel?.Model != null)
        {
            ViewModel.Model.PropertyChanged -= OnModelPropertyChanged;
        }
    }
}
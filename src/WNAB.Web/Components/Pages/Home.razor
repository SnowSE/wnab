@page "/"
@inject PlanBudgetViewModel ViewModel
@inject WNAB.MVM.IAuthenticationService AuthService
@inject NavigationManager Navigation
@implements IDisposable

<!-- LLM-Dev: Home page is now the Budgets page, following the design in the screenshots -->

<div class="budgets-container">
    <div class="budgets-content">
        <!-- Header Section -->
        <div class="budgets-header">
            <div class="d-flex justify-content-between align-items-start mb-3">
                <div>
                    <h2 class="fw-bold mb-1">Monthly Budget</h2>
                    <p class="text-muted mb-0">Allocate your monthly income to categories</p>
                </div>
                <div>
                    @if (!ViewModel.Model.IsEditMode)
                    {
                        <button class="btn btn-dark btn-edit-budget" @onclick="OnEditBudgetClick">
                            <i class="bi bi-pencil-square me-2"></i>Edit Budget
                        </button>
                    }
                    else
                    {
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-secondary" @onclick="OnUndoClick">
                                <i class="bi bi-arrow-counterclockwise me-1"></i>Undo
                            </button>
                            <button class="btn btn-outline-dark" @onclick="OnCancelEditClick">
                                <i class="bi bi-x-lg me-1"></i>Cancel
                            </button>
                            <button class="btn btn-dark" @onclick="OnSaveChangesClick">
                                <i class="bi bi-save me-1"></i>Save Changes
                            </button>
                        </div>
                    }
                </div>
            </div>

            <!-- Compact Month/Year Navigator -->
            <div class="month-navigator mb-4">
                <button class="nav-arrow" 
                        @onclick="OnPreviousMonthClick"
                        disabled="@ViewModel.Model.IsEditMode">
                    <i class="bi bi-chevron-left"></i>
                </button>
                
                <div class="month-display" @onclick="OnToggleMonthYearPicker">
                    <span class="month-name">@ViewModel.CurrentMonthAbbreviation</span>
                    <span class="year-name">@ViewModel.Model.CurrentYear</span>
                    <i class="bi bi-chevron-down ms-2"></i>
                </div>
                
                <button class="nav-arrow" 
                        @onclick="OnNextMonthClick"
                        disabled="@ViewModel.Model.IsEditMode">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>

            <!-- Month/Year Picker Dropdown (Hidden by default) -->
            @if (ViewModel.IsMonthYearPickerVisible)
            {
                <div class="month-year-picker-overlay" @onclick="OnCloseMonthYearPicker">
                    <div class="month-year-picker-popup" @onclick:stopPropagation="true">
                        <!-- Year Navigation -->
                        <div class="year-header">
                            <button class="btn btn-sm btn-link text-decoration-none" 
                                    @onclick="OnPreviousYearClick"
                                    disabled="@(ViewModel.Model.IsEditMode || ViewModel.Model.CurrentYear <= 2000)">
                                <i class="bi bi-chevron-left"></i>
                            </button>
                            <h5 class="mb-0 fw-bold">@ViewModel.Model.CurrentYear</h5>
                            <button class="btn btn-sm btn-link text-decoration-none" 
                                    @onclick="OnNextYearClick"
                                    disabled="@(ViewModel.Model.IsEditMode || ViewModel.Model.CurrentYear >= 2100)">
                                <i class="bi bi-chevron-right"></i>
                            </button>
                        </div>
                        
                        <!-- Month Grid -->
                        <div class="month-grid">
                            @for (int i = 0; i < 12; i++)
                            {
                                var monthIndex = i + 1;
                                var isSelected = monthIndex == ViewModel.Model.CurrentMonth;
                                var monthName = ViewModel.MonthAbbreviations[i];
                                
                                <button class="month-button @(isSelected ? "selected" : "")"
                                        @onclick="() => OnSelectMonthFromPicker(monthIndex)"
                                        disabled="@ViewModel.Model.IsEditMode">
                                    @monthName
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }

            <!-- Ready to Assign Section -->
            <div class="monthly-limit-card">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="rta-display">
                            <h5 class="text-muted mb-2 fw-normal">Ready to Assign</h5>
                            <h2 class="fw-bold mb-0 text-success">@ViewModel.Model.ReadyToAssign.ToString("C")</h2>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="text-muted">Allocated This Month:</span>
                            <span class="fw-bold">@ViewModel.Model.GetTotalAllocated().ToString("C")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Category Allocations Section -->
        <div class="category-allocations-section">
            <h6 class="fw-bold mb-3">Category Allocations</h6>
            
            @if (!ViewModel.Model.IsLoggedIn)
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-1"></i>
                    Please log in to view budget.
                </div>
            }
            else if (ViewModel.Model.BudgetAllocations != null && ViewModel.Model.BudgetAllocations.Count > 0)
            {
                @foreach (var allocation in ViewModel.Model.BudgetAllocations)
                {
                    var spent = ViewModel.Model.GetSpentAmount(allocation.Id);
                    var remaining = ViewModel.Model.GetRemainingAmount(allocation);
                    var progress = allocation.BudgetedAmount > 0 ? (spent / allocation.BudgetedAmount * 100) : 0;
                    var categoryColor = allocation.Category?.Color ?? "#6c757d";
                    var isExpanded = _expandedCategories.Contains(allocation.Id);

                    <div class="category-card mb-3">
                        <div class="category-card-header" @onclick="() => ToggleCategoryExpand(allocation.Id)">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center gap-2 flex-grow-1">
                                    <span class="category-dot" style="background-color: @categoryColor"></span>
                                    <h6 class="mb-0 fw-bold">@allocation.Category?.Name</h6>
                                    <i class="bi @(isExpanded ? "bi-chevron-up" : "bi-chevron-down") ms-2 text-muted"></i>
                                </div>
                                <div class="d-flex align-items-center gap-2">
                                    <button class="btn btn-sm btn-link text-secondary p-0" 
                                            @onclick="() => OnHideCategory(allocation)"
                                            @onclick:stopPropagation="true"
                                            title="Hide this category">
                                        <i class="bi bi-eye-slash fs-5"></i>
                                    </button>
                                    @if (ViewModel.Model.IsEditMode)
                                    {
                                        <div class="input-group input-group-sm" style="width: 150px;">
                                            <span class="input-group-text">$</span>
                                            <input type="number" 
                                                   class="form-control text-end" 
                                                   @bind="allocation.BudgetedAmount" 
                                                   step="0.01"
                                                   @onclick:stopPropagation="true" />
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="fw-bold">@allocation.BudgetedAmount.ToString("C")</span>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="category-card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="small text-muted">Spent:</span>
                                <span class="small">@spent.ToString("C")</span>
                            </div>
                            
                            <!-- Progress Bar -->
                            <div class="category-progress-bar mb-2">
                                <div class="category-progress-fill" style="width: @Math.Min(progress, 100)%"></div>
                            </div>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="small text-muted">Remaining:</span>
                                <span class="small fw-bold text-success">@remaining.ToString("C")</span>
                            </div>
                        </div>

                        @if (isExpanded)
                        {
                            <div class="category-card-graph">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <h6 class="mb-0 small fw-bold"><i class="bi bi-graph-up me-1"></i>Spending Projection</h6>
                                    <span class="badge bg-secondary">Current Pace</span>
                                </div>
                                <div class="graph-placeholder">
                                    <div class="text-center py-4 text-muted">
                                        <i class="bi bi-graph-up fs-1"></i>
                                        <p class="small mt-2 mb-0">SciChart Integration Placeholder</p>
                                        <p class="small text-muted">Actual Spent • Budget Limit • Projected</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            }
            else
            {
                <div class="text-center mt-5">
                    <i class="bi bi-calendar-check fs-1 text-muted"></i>
                    <p class="text-muted mt-3">No budget allocations for this month. Add categories to get started.</p>
                </div>
            }
            
            <!-- Hidden Categories Section -->
            @if (ViewModel.Model.HiddenAllocations != null && ViewModel.Model.HiddenAllocations.Count > 0)
            {
                <div class="hidden-categories-section mt-4">
                    <div class="hidden-categories-header" @onclick="ToggleHiddenCategories">
                        <h6 class="fw-bold mb-0">
                            <i class="bi bi-eye-slash me-2"></i>
                            Hidden Categories (@ViewModel.Model.HiddenAllocations.Count)
                        </h6>
                        <i class="bi @(_isHiddenCategoriesExpanded ? "bi-chevron-up" : "bi-chevron-down")"></i>
                    </div>
                    
                    @if (_isHiddenCategoriesExpanded)
                    {
                        <div class="hidden-categories-list">
                            @foreach (var allocation in ViewModel.Model.HiddenAllocations)
                            {
                                var categoryColor = allocation.Category?.Color ?? "#6c757d";
                                
                                <div class="hidden-category-item">
                                    <div class="d-flex align-items-center gap-2 flex-grow-1">
                                        <span class="category-dot opacity-50" style="background-color: @categoryColor"></span>
                                        <span class="text-muted">@allocation.Category?.Name</span>
                                    </div>
                                    <div class="d-flex align-items-center gap-3">
                                        <span class="text-muted small">@allocation.BudgetedAmount.ToString("C")</span>
                                        <button class="btn btn-sm btn-primary" @onclick="() => OnUnhideCategory(allocation)">
                                            <i class="bi bi-eye me-1"></i>Show
                                        </button>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Include the Create Category Modal -->
<CreateCategoryModal OnCategoryCreated="OnCategoryCreated" />

@code {
    private HashSet<int> _expandedCategories = new();
    private bool _isInitialized = false;
    private bool _shouldNavigateToLanding = false;
    private bool _isHiddenCategoriesExpanded = false;
    
    private async Task OnToggleMonthYearPicker()
    {
        ViewModel.ToggleMonthYearPickerCommand.Execute(null);
    }
    
    private async Task OnCloseMonthYearPicker()
    {
        ViewModel.CloseMonthYearPickerCommand.Execute(null);
    }
    
    private async Task OnPreviousMonthClick()
    {
        await ViewModel.PreviousMonthCommand.ExecuteAsync(null);
    }
    
    private async Task OnNextMonthClick()
    {
        await ViewModel.NextMonthCommand.ExecuteAsync(null);
    }
    
    private async Task OnSelectMonthFromPicker(int month)
    {
        await ViewModel.SelectMonthFromPickerCommand.ExecuteAsync(month);
    }
    
    protected override async Task OnInitializedAsync()
    {
        // Check if user is authenticated and token is valid
        if (AuthService is WNAB.Web.Services.WebAuthenticationService webAuthService)
        {
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            var isTokenExpired = await webAuthService.IsTokenExpiredAsync();

            if (!isAuthenticated || isTokenExpired)
            {
                _shouldNavigateToLanding = true;
                return; // Stop execution immediately
            }
        }

        // Only proceed if authentication is valid
        try
        {
            // Subscribe to property changes to trigger UI updates
            ViewModel.Model.PropertyChanged += OnModelPropertyChanged;
            ViewModel.PropertyChanged += OnViewModelPropertyChanged;
            
            await ViewModel.InitializeAsync();
            _isInitialized = true;
        }
        catch (HttpRequestException ex) when (ex.StatusCode == System.Net.HttpStatusCode.Unauthorized)
        {
            // Token expired during initialization
            _shouldNavigateToLanding = true;
        }
    }

    protected override void OnAfterRender(bool firstRender)
    {
        base.OnAfterRender(firstRender);
        
        // Navigate after rendering is complete to avoid NavigationException
        if (_shouldNavigateToLanding)
        {
            _shouldNavigateToLanding = false; // Reset flag
            Navigation.NavigateTo("/landing");
        }
    }

    private void OnModelPropertyChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }

    private void OnViewModelPropertyChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task OnMonthYearChanged()
    {
        await ViewModel.SetMonthYearCommand.ExecuteAsync(null);
    }
    
    private async Task OnMonthClick(int month)
    {
        await ViewModel.SelectMonthCommand.ExecuteAsync(month);
    }
    
    private async Task OnNextYearClick()
    {
        await ViewModel.NextYearCommand.ExecuteAsync(null);
    }
    
    private async Task OnPreviousYearClick()
    {
        await ViewModel.PreviousYearCommand.ExecuteAsync(null);
    }

    private void OnEditBudgetClick()
    {
        ViewModel.ToggleEditModeCommand.Execute(null);
    }

    private void OnUndoClick()
    {
        ViewModel.UndoChangesCommand.Execute(null);
    }

    private void OnCancelEditClick()
    {
        ViewModel.CancelEditModeCommand.Execute(null);
    }

    private async Task OnSaveChangesClick()
    {
        await ViewModel.SaveCommand.ExecuteAsync(null);
        ViewModel.Model.IsEditMode = false;
    }

    private async Task OnCategoryCreated()
    {
        await ViewModel.Model.HandleNewCategoryAsync();
    }

    private void ToggleCategoryExpand(int allocationId)
    {
        if (_expandedCategories.Contains(allocationId))
        {
            _expandedCategories.Remove(allocationId);
        }
        else
        {
            _expandedCategories.Add(allocationId);
        }
    }
    
    private void ToggleHiddenCategories()
    {
        _isHiddenCategoriesExpanded = !_isHiddenCategoriesExpanded;
    }
    
    private async Task OnHideCategory(WNAB.Data.CategoryAllocation allocation)
    {
        try
        {
            await ViewModel.HideAllocationCommand.ExecuteAsync(allocation);
        }
        catch (Exception ex)
        {
            // Error is already displayed by the ViewModel
            Console.WriteLine($"Error hiding category: {ex.Message}");
        }
    }
    
    private async Task OnUnhideCategory(WNAB.Data.CategoryAllocation allocation)
    {
        try
        {
            await ViewModel.UnhideAllocationCommand.ExecuteAsync(allocation);
        }
        catch (Exception ex)
        {
            // Error is already displayed by the ViewModel
            Console.WriteLine($"Error unhiding category: {ex.Message}");
        }
    }

    public void Dispose()
    {
        if (ViewModel?.Model != null)
        {
            ViewModel.Model.PropertyChanged -= OnModelPropertyChanged;
        }
        if (ViewModel != null)
        {
            ViewModel.PropertyChanged -= OnViewModelPropertyChanged;
        }
    }
}

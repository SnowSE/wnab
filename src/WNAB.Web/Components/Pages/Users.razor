@page "/users"
@inject IHttpClientFactory ClientFactory

<h1>Users</h1>

<button class="btn btn-secondary" @onclick="Load">Refresh</button>

@if (_error is not null)
{
    <div class="alert alert-danger mt-3">@_error</div>
}

@if (_json is null)
{
    <p class="mt-3"><em>Loading...</em></p>
}
else
{
    <pre class="mt-3">@_json</pre>
}

@code {
    private string? _json;
    private string? _error;

    protected override async Task OnInitializedAsync() => await Load();

    private async Task Load()
    {
        _error = null;
        try
        {
            var client = ClientFactory.CreateClient("wnab-api");
            using var resp = await client.GetAsync("/users");
            _json = await resp.Content.ReadAsStringAsync();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }
}

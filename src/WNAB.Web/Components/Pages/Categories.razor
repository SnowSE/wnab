@page "/categories"
@inject CategoryManagementService CategoriesService

<h1>Categories</h1>

<button class="btn btn-secondary" @onclick="Load">Refresh</button>

@if (_error is not null)
{
    <div class="alert alert-danger mt-3">@_error</div>
}

<div class="mt-3 responsive-panel">
    @if (_items is null)
    {
        <p><em>Loading...</em></p>
    }
    else if (_items.Count == 0)
    {
        <p>No categories found.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-sm align-middle">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>User</th>
                        <th>Income</th>
                        <th>Active</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in _items)
                    {
                        <tr>
                            <td>@c.Name</td>
                            <td>@c.UserId</td>
                            <td>@(c.IsIncome ? "Yes" : "No")</td>
                            <td>@(c.IsActive ? "Yes" : "No")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<Category>? _items;
    private string? _error;

    protected override async Task OnInitializedAsync() => await Load();

    private async Task Load()
    {
        _error = null;
        try
        {
            // LLM-Dev:v2 Use service list method to avoid HttpClient in UI.
            _items = await CategoriesService.GetCategoriesAsync();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
    }
}

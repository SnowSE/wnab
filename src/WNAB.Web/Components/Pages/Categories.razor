@page "/categories"
@inject CategoriesViewModel ViewModel
@inject CategoryManagementService CategoryService
@inject WNAB.MVM.IAuthenticationService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JS
@implements IDisposable

<div class="page-container">
    <div class="accounts-header">
        <div class="header-text">
            <h1 class="page-title">Categories</h1>
        </div>
        <div class="header-actions">
            <button class="btn btn-outline-secondary" @onclick="ToggleAddForm">
                <i class="bi bi-@(IsAddFormVisible ? "x-circle" : "plus-circle") me-1"></i>
                @(IsAddFormVisible ? "Cancel" : "Create Category")
            </button>
            <button class="btn btn-secondary" @onclick="RefreshCategories" disabled="@ViewModel.Model.IsBusy">
                @if (ViewModel.Model.IsBusy)
                {
                    <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                }
                else
                {
                    <i class="bi bi-arrow-clockwise me-1"></i>
                }
                Refresh
            </button>
        </div>
    </div>

@if (!ViewModel.Model.IsLoggedIn)
{
    <div class="alert alert-warning">
        <i class="bi bi-exclamation-triangle me-1"></i>
        Please log in to view categories.
    </div>
}

    @if (ViewModel.Model.Items == null)
    {
        <div class="text-center p-4">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading categories...</p>
        </div>
    }
    else if (ViewModel.Model.Items.Count == 0)
    {
        <div class="text-center p-4">
            <i class="bi bi-tags fs-1 text-muted"></i>
            <p class="mt-2">No categories found. Click "Create Category" to add your first category.</p>
        </div>
    }
    else
    {
        <div class="category-grid">
            @foreach (var c in ViewModel.Model.Items)
            {
                <div class="category-card">
                    <div class="category-card-header d-flex align-items-start justify-content-between">
                        <div class="d-flex align-items-center gap-3">
                            <div class="category-dot" style="background-color:@(string.IsNullOrWhiteSpace(c.Color) ? "#E53E3E" : c.Color)"></div>
                            <div class="fw-semibold">@c.Name</div>
                        </div>
                        <div class="category-actions">
                            <button class="btn btn-link btn-sm text-dark p-1" title="Edit" @onclick="() => EditCategory(c)">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-link btn-sm text-danger p-1" title="Delete" @onclick="() => DeleteCategory(c)">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </div>

                    <div class="category-card-body mt-4">
                        <div class="category-amount">$0.00</div>
                        <div class="text-muted small">Total spent</div>
                    </div>
                </div>
            }
        </div>
    }

<!-- Inline Add Category Form -->
@if (IsAddFormVisible && ViewModel.Model.IsLoggedIn)
{
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Create New Category</h5>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrWhiteSpace(AddCategoryStatusMessage))
            {
                <div class="alert alert-info mb-3">@AddCategoryStatusMessage</div>
            }
            <EditForm Model="AddCategoryModel" OnValidSubmit="@OnCreateCategorySubmit">
                <div class="mb-3">
                    <label class="form-label">Category Name</label>
                    <input class="form-control" @bind="AddCategoryModel.Name" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Color</label>
                    <input class="form-control" @bind="AddCategoryModel.Color" />
                </div>
                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="button" class="btn btn-secondary" @onclick="ToggleAddForm">Cancel</button>
                    <button class="btn btn-primary" type="submit" disabled="@IsAddCategoryBusy">
                        @if (IsAddCategoryBusy)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        Create Category
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

<!-- Inline Edit Category Form -->
@if (IsEditFormVisible && ViewModel.Model.IsLoggedIn)
{
    <div class="card mb-4 shadow-sm border-warning">
        <div class="card-header bg-warning text-dark">
            <h5 class="mb-0"><i class="bi bi-pencil me-2"></i>Edit Category</h5>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrWhiteSpace(EditCategoryStatusMessage))
            {
                <div class="alert alert-info mb-3">@EditCategoryStatusMessage</div>
            }
            <EditForm Model="EditCategoryModel" OnValidSubmit="@OnEditCategorySubmit">
                <div class="mb-3">
                    <label class="form-label">Category Name</label>
                    <input class="form-control" @bind="EditCategoryModel.Name" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Color</label>
                    <input class="form-control" @bind="EditCategoryModel.Color" />
                </div>
                <div class="d-flex justify-content-end gap-2 mt-3">
                    <button type="button" class="btn btn-secondary" @onclick="ToggleEditForm">Cancel</button>
                    <button class="btn btn-warning" type="submit" disabled="@IsEditCategoryBusy">
                        @if (IsEditCategoryBusy)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                        }
                        Update Category
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@code {
    // Inline form state
    private bool IsAddFormVisible = false;
    private bool IsEditFormVisible = false;
    private Category AddCategoryModel = new Category();
    private Category EditCategoryModel = new Category();
    private string? AddCategoryStatusMessage;
    private string? EditCategoryStatusMessage;
    private bool IsAddCategoryBusy = false;
    private bool IsEditCategoryBusy = false;

    protected override async Task OnInitializedAsync()
    {
        // Check if user is authenticated and token is valid
        if (AuthService is WNAB.Web.Services.WebAuthenticationService webAuthService)
        {
            var isAuthenticated = await AuthService.IsAuthenticatedAsync();
            var isTokenExpired = await webAuthService.IsTokenExpiredAsync();

            if (!isAuthenticated || isTokenExpired)
            {
                Navigation.NavigateTo("/landing");
                return;
            }
        }

        // Subscribe to property changes to trigger UI updates
        ViewModel.Model.PropertyChanged += OnModelPropertyChanged;

        await ViewModel.InitializeAsync();
    }

    private void OnModelPropertyChanged(object? sender, System.ComponentModel.PropertyChangedEventArgs e)
    {
        InvokeAsync(StateHasChanged);
    }

    private void ToggleAddForm()
    {
        IsAddFormVisible = !IsAddFormVisible;
        AddCategoryStatusMessage = null;
        AddCategoryModel = new Category();
    }

    private void ToggleEditForm()
    {
        IsEditFormVisible = false;
        EditCategoryStatusMessage = null;
        EditCategoryModel = new Category();
    }

    private async Task RefreshCategories()
    {
        await ViewModel.RefreshCommand.ExecuteAsync(null);
    }

    private async Task OnCreateCategorySubmit()
    {
        AddCategoryStatusMessage = null;
        IsAddCategoryBusy = true;
        try
        {
            // Replace with actual ViewModel logic
            var request = new WNAB.SharedDTOs.CreateCategoryRequest(AddCategoryModel.Name, AddCategoryModel.Color);
            await CategoryService.CreateCategoryAsync(request);
            AddCategoryStatusMessage = "Category created successfully!";
            IsAddFormVisible = false;
            await ViewModel.RefreshCommand.ExecuteAsync(null);
        }
        catch (Exception ex)
        {
            AddCategoryStatusMessage = $"Error: {ex.Message}";
        }
        finally
        {
            IsAddCategoryBusy = false;
        }
    }

    private async Task OnEditCategorySubmit()
    {
        EditCategoryStatusMessage = null;
        IsEditCategoryBusy = true;
        try
        {
            // Replace with actual ViewModel logic
            var request = new WNAB.SharedDTOs.EditCategoryRequest(EditCategoryModel.Id, EditCategoryModel.Name, EditCategoryModel.Color, EditCategoryModel.IsActive);
            await CategoryService.UpdateCategoryAsync(EditCategoryModel.Id, request, default);
            EditCategoryStatusMessage = "Category updated successfully!";
            IsEditFormVisible = false;
            await ViewModel.RefreshCommand.ExecuteAsync(null);
        }
        catch (Exception ex)
        {
            EditCategoryStatusMessage = $"Error: {ex.Message}";
        }
        finally
        {
            IsEditCategoryBusy = false;
        }
    }

    private void EditCategory(Category category)
    {
        if (category == null) return;
        EditCategoryModel = new Category
        {
            Id = category.Id,
            Name = category.Name,
            Color = category.Color,
            IsActive = category.IsActive
        };
        IsEditFormVisible = true;
        EditCategoryStatusMessage = null;
    }

    private async Task DeleteCategory(Category category)
    {
        if (category == null) return;

        var confirmed = await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{category.Name}'? This action cannot be undone.");
        if (!confirmed) return;

        try
        {
            await CategoryService.DeleteCategoryAsync(category.Id);
            await ViewModel.Model.RefreshAsync();
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", $"Failed to delete category: {ex.Message}");
        }
    }

    public void Dispose()
    {
        if (ViewModel?.Model != null)
        {
            ViewModel.Model.PropertyChanged -= OnModelPropertyChanged;
        }
    }
}
</div>
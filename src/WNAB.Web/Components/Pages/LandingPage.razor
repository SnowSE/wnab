@page "/landing"
@inject NavigationManager Navigation

<div class="landing-page">
    <div class="landing-container">
        <div class="landing-content">
            <!-- Logo/Icon -->
            <div class="landing-icon mb-4">
                <i class="bi bi-wallet2 display-1 text-primary"></i>
            </div>

            <!-- Hero Section -->
            <h1 class="display-4 fw-bold mb-4">Welcome to WNAB</h1>
            <h2 class="h4 text-muted mb-4">You Need A Budget. We Made It Easy.</h2>

            <!-- Marketing Content -->
            <div class="landing-description mb-5">
                <p class="lead">
                    WNAB is the best budgeting app ever created. Take control of your finances with our 
                    intuitive, powerful budget planning tools that help you allocate every dollar with purpose.
                </p>
                <p>
                    Unlike other budgeting apps, WNAB empowers you to plan ahead, track spending in real-time, 
                    and visualize your financial goals with stunning clarity. Join thousands of users who have 
                    transformed their financial lives with WNAB's proven methodology.
                </p>
            </div>

            <!-- Features List -->
            <div class="features-grid mb-5">
                <div class="feature-item">
                    <i class="bi bi-graph-up-arrow text-success fs-3"></i>
                    <h5 class="mt-2">Smart Budgeting</h5>
                    <p class="text-muted small">Allocate your income across categories with ease</p>
                </div>
                <div class="feature-item">
                    <i class="bi bi-receipt text-primary fs-3"></i>
                    <h5 class="mt-2">Transaction Tracking</h5>
                    <p class="text-muted small">Monitor every dollar you spend, automatically</p>
                </div>
                <div class="feature-item">
                    <i class="bi bi-pie-chart text-warning fs-3"></i>
                    <h5 class="mt-2">Visual Insights</h5>
                    <p class="text-muted small">See your spending patterns at a glance</p>
                </div>
                <div class="feature-item">
                    <i class="bi bi-shield-check text-info fs-3"></i>
                    <h5 class="mt-2">Secure & Private</h5>
                    <p class="text-muted small">Your financial data is protected with enterprise-grade security</p>
                </div>
            </div>

            <!-- Call to Action -->
            <div class="cta-section">
                <a href="/login" class="btn btn-primary btn-lg px-5 py-3">
                    <i class="bi bi-box-arrow-in-right me-2"></i>
                    Get Started - Login Now
                </a>
                <p class="text-muted small mt-3">
                    Secure authentication powered by Keycloak
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .landing-page {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        padding: 2rem;
    }

    .landing-container {
        background: white;
        border-radius: 20px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        max-width: 900px;
        width: 100%;
        padding: 3rem;
    }

    .landing-content {
        text-align: center;
    }

    .landing-icon {
        animation: float 3s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px);
        }
    }

    .landing-description {
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
    }

    .feature-item {
        padding: 1rem;
    }

    .feature-item h5 {
        font-size: 1rem;
        font-weight: 600;
    }

    .cta-section {
        margin-top: 2rem;
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(102, 126, 234, 0.4);
    }

    @@media (max-width: 768px) {
        .landing-container {
            padding: 2rem 1.5rem;
        }

        .features-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .display-4 {
            font-size: 2rem;
        }
    }
</style>
